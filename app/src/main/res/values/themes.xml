<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FB_login" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item> <!-- Remove background tint if necessary -->
        <item name="backgroundTintMode">src_over</item>
        <item name="android:background">@drawable/butt</item> <!-- Your custom drawable -->
    </style>
    <!-- res/values/themes.xml -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
    <style name="Theme.FB_login" parent="Base.Theme.FB_login" />
</resources>

